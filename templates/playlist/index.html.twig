{% extends 'base.html.twig' %}

{% block title %}Playlists{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Mes Playlists</h1>
        <a href="{{ path('app_playlist_new') }}" class="btn btn-primary mt-4">Cr√©er une playlist</a>
        <table class="table table-hover">
            <thead>
              <tr>
              {% if is_mobile() %}
                <td align="center" colspan="2" scope="col"><b>Playlists</b></th>
              {% else %}
                <th scope="col" width="50%">Nom</th>
                <th scope="col" width="50%">Actions</th>
              {% endif %}
              </tr>
            </thead>
            <tbody>
            {% for playlist in playlists %}
              <tr class="table-primary">
                <td{% if is_mobile() %} align="center" colspan="2"{% endif %} valign="middle">{{ playlist.nomPlaylist }}</td>{% if is_mobile() %}
              </tr>
              <tr class="table-primary">{% endif %}
                <td{% if is_mobile() %} align="center"{% endif %} valign="middle" width="50%">
                    <a href="{{ path('app_playlist_show', {'id': playlist.id}) }}" class="btn btn-success">Afficher</a>{% if is_mobile() %}
                </td>
                <td align="center" valign="middle" width="50%">{% endif %}
                    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}" class="btn btn-info">Modifier</a>{% if is_mobile() %}
                </td>
              </tr>
              <tr class="table-primary">
                <td align="center" colspan="2" valign="middle">{% endif %}
                    <a class="btn btn-warning">{{ include('playlist/_delete_form.html.twig') }}</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}